%h1{"ng-controller" => "SessionsCtrl"} Login
%form{"ng-submit" => "login()"}
  .control-group
    %label.control-label{:for => "email"} Email
    .controls
      %input#email{:name => "email", "ng-minlength" => "2", "ng-model" => "email", :placeholder => "Email", :required => "", :type => "email", autofocus: true}
  .control-group
    %label.control-label{:for => "password"} Password
    .controls
      %input#password{:name => "password", "ng-minlength" => "2", "ng-model" => "password", "password-validate" => "", :placeholder => "Password", :required => "", :type => "password"}
