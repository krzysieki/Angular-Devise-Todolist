%header.navbar.navbar-fixed-top{"ng-controller"=>"UsersCtrl"}
  %nav.navbar-inner
    .container
      = link_to "Angular First", root_path, :class => 'brand'
      %a.btn.btn-navbar{"href" => "#", "data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .container.nav-collapse
        .control-links{"ng-show" => "authorized()"}
          {{ current_user.name }}
          |
          %a{"href" => "#", "ng-click" => "logout()"} Logout
        .control-links{"ng-show" => "!authorized()"}
          %a{"href" => "/login"} Login
          |
          %a{"href" => "/register"} Register
